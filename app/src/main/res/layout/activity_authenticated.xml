<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffcc0000"
    android:weightSum="2">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:background="@drawable/customborder"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You are near reader: "
            android:id="@+id/titleText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textStyle="normal|bold"
            android:textSize="16dp"
            android:padding="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/gateNumberText"
            android:text="5"
            android:textColor="@color/apptheme_color"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textSize="100dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_weight="1.3">
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:background="@drawable/largebuttons_btn_default_holo_light"
                    android:layout_height="100dp"
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.98"
                    android:drawableTop="@drawable/ic_map"
                    android:text="Navigate to gate"
                    android:id="@+id/navigate_to_gate_button" />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.04"/>

                <Button
                    android:background="@drawable/largebuttons_btn_default_holo_light"
                    android:layout_height="100dp"
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.98"
                    android:drawableTop="@drawable/ic_pois"
                    android:text="Explore area"
                    android:id="@+id/explore_area_button"/>

            </LinearLayout>
            <Space
                android:layout_width="fill_parent"
                android:layout_height="5dp" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:background="@drawable/largebuttons_btn_default_holo_light"
                    android:layout_height="100dp"
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.98"
                    android:drawableTop="@drawable/ic_info"
                    android:text="Information"
                    android:id="@+id/information_button"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.04"/>

                <Button
                    android:background="@drawable/largebuttons_btn_default_holo_light"
                    android:layout_height="100dp"
                    android:padding="3dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.98"
                    android:drawableTop="@drawable/ic_logout_black"
                    android:text="Logout"
                    android:id="@+id/logout_button"/>

            </LinearLayout>
               
         </LinearLayout>        

    </ScrollView>

</LinearLayout>
